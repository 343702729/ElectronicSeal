<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBg"
    android:orientation="vertical">
    <include layout="@layout/item_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            style="@style/item_line_ll">
            <TextView
                style="@style/info_title_tv"
                android:layout_width="80dp"
                android:text="旧密码"
                android:textColor="@color/grayDark"/>
            <EditText
                android:id="@+id/old_psw_et"
                style="@style/info_item_et"
                android:inputType="textPassword"
                android:hint="请输入原始密码" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/appBg"/>
        <LinearLayout
            style="@style/item_line_ll">
            <TextView
                style="@style/info_title_tv"
                android:layout_width="80dp"
                android:text="新密码"
                android:textColor="@color/grayDark"/>
            <EditText
                android:id="@+id/new_psw_et"
                style="@style/info_item_et"
                android:inputType="textPassword"
                android:hint="请输入新密码" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/appBg"/>
        <LinearLayout
            style="@style/item_line_ll">
            <TextView
                style="@style/info_title_tv"
                android:layout_width="80dp"
                android:text="确认新密码"
                android:textColor="@color/grayDark"/>
            <EditText
                android:id="@+id/sure_psw_et"
                style="@style/info_item_et"
                android:inputType="textPassword"
                android:hint="请确认新密码" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_button_sure"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
